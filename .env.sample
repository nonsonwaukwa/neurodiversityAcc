# Flask Configuration
FLASK_APP=main.py
FLASK_DEBUG=True
SECRET_KEY=your-secret-key
PORT=5000

# WhatsApp API Settings
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_VERIFY_TOKEN=your-verify-token

# First WhatsApp Account
WHATSAPP_PHONE_NUMBER_ID_1=your-phone-number-id-1
WHATSAPP_ACCESS_TOKEN_1=your-access-token-1

# Second WhatsApp Account
WHATSAPP_PHONE_NUMBER_ID_2=your-phone-number-id-2
WHATSAPP_ACCESS_TOKEN_2=your-access-token-2

# Firebase Configuration
# Either provide the path to your Firebase credentials file
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
# Or provide the credentials as a JSON string
# FIREBASE_CREDENTIALS={"type":"service_account",...}

# Cron Job Settings (UTC)
ENABLE_CRON=True
DAILY_CHECKIN_TIME=08:00
DAILY_TASK_TIME=09:00
WEEKLY_CHECKIN_TIME=09:00
WEEKLY_CHECKIN_DAY=6

# Sentiment Thresholds
SENTIMENT_THRESHOLD_POSITIVE=0.5
SENTIMENT_THRESHOLD_NEGATIVE=-0.2

# Cron Security
CRON_SECRET=your-secure-random-string-for-cron-authentication

